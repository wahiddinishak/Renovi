<div class="col-sm-12 mt-2">
    <div class="card">
        <div class="card-header">
            Penggunaan Biaya
        </div>
        <div class="card-body">

            <h6 class="h6 text-muted">Material dan Jasa</h6>
            <table class="table table-bordered table-sm w-100 mt-2">
                <thead class="thead-dark">
                    <tr>
                        <th>Item</th>
                        <th class="text-right">Kuantitas</th>
                        <th class="text-right">Biaya</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in (IEnumerable<LaporanUsageView>)ViewBag.listLaporanUsage)
                    {
                        <tr>
                            <td>
                                @m.materialInfo
                            </td>
                            <td class="text-right">
                                @m.qty.ToString("n2")
                            </td>
                            <td class="text-right">
                                @m.amount.ToString("n2")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <h6 class="h6 text-muted">Lain-lain</h6>
            <table class="table table-bordered table-sm w-100 mt-2" id="tblOverhead">
                <thead class="thead-dark">
                    <tr>
                        <th>Keterangan</th>
                        <th class="text-right">Biaya</th>
                    </tr>
                </thead>
                <tbody>
                    <tr> 
                        <td>
                            @ViewData["info"]
                        </td>
                        <td class="text-right">
                            @ViewData["amount"]
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>

    <div class="card mt-2">
        <div class="card-header">
            Nota Penggunaan Biaya
        </div>
        <div class="card-body">
            <ul class="list-group mt-2 mb-4">
                @foreach (var data in (IEnumerable<LaporanAttachment>)ViewBag.Nota)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="~/file/@data.filename" target="_blank">@data.filename</a>
                        
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-header">
            Dokumentasi Progress Pekerjaan
        </div>
        <div class="card-body">
            <ul class="list-group mt-2 mb-4">
                @foreach (var data in (IEnumerable<LaporanAttachment>)ViewBag.Progress)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="~/file/@data.filename" target="_blank">@data.filename</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>