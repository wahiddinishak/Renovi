@model renovi.Models.Personil

<form asp-controller="" asp-action="" id="frm">
    <input type="text" asp-for="Id" id="idPersonil" class="d-none">
    <input type="text" asp-for="idProyek" class="d-none">
    <div class="form-group row">
        <label asp-for="nama" class="col-sm-4 col-form-label col-form-label-sm"></label>
        <div class="col-sm-8">
            <input type="text" asp-for="nama" class="form-control form-control-sm">
            <span asp-validation-for="nama" class="badge badge-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="role" class="col-sm-4 col-form-label col-form-label-sm"></label>
        <div class="col-sm-8">
            <select class="form-control form-control-sm" style="width: 100%;" asp-for="role" id="srole">
                <option></option>
            </select>
            <span asp-validation-for="role" class="badge badge-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="telepon" class="col-sm-4 col-form-label col-form-label-sm"></label>
        <div class="col-sm-8">
            <input type="tel" asp-for="telepon" class="form-control form-control-sm">
            <span asp-validation-for="telepon" class="badge badge-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="akunBank" class="col-sm-4 col-form-label col-form-label-sm"></label>
        <div class="col-sm-8">
            <input type="text" asp-for="akunBank" class="form-control form-control-sm">
        </div>
    </div>
</form>
