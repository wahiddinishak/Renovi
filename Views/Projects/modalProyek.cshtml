@model renovi.Models.ProyekInfoParam

<form asp-controller="" asp-action="" id="frm">
    <input type="text" asp-for="Id" class="d-none">
    <div class="form-group row">
        <label class="col-sm-3 col-form-label col-form-label-sm" asp-for="judul"></label>
        <div class="col-sm-9">
            <input type="text" asp-for="judul" class="form-control form-control-sm">
            <span asp-validation-for="judul" class="badge badge-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label col-form-label-sm" asp-for="Alamat"></label>
        <div class="col-sm-9">
            <input type="text" asp-for="Alamat" class="form-control form-control-sm">
            <span asp-validation-for="Alamat" class="badge badge-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label col-form-label-sm">Target Pengerjaan</label>
        <div class="col-sm-9">
            <input class="form-control form-control-sm" type="text" id="dates" />
            <input type="date" asp-for="tglMulai" class="d-none" id="start">
            <input type="date" asp-for="tglSelesai" class="d-none" id="end">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label col-form-label-sm" asp-for="mandor"></label>
        <div class="col-sm-9">
            <select class="form-control form-control-sm" id="smandor" style="width: 100%;" asp-for="mandor">
                <option></option>
            </select>
            <span asp-validation-for="mandor" class="badge badge-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label col-form-label-sm" asp-for="namaKlien"></label>
        <div class="col-sm-9">
            <input type="text" asp-for="namaKlien" class="form-control form-control-sm">
            <span asp-validation-for="namaKlien" class="badge badge-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label col-form-label-sm" asp-for="desain"></label>
        <div class="col-sm-9">
            <input type="file" asp-for="desain" class="form-control form-control-sm" accept="application/pdf">
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-form-label col-form-label-sm" asp-for="kontrak"></label>
        <div class="col-sm-9">
            <input type="file" asp-for="kontrak" class="form-control form-control-sm" accept="application/pdf">
        </div>
    </div>
</form>