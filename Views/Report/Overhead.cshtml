@model renovi.Models.LaporanOverheadProfitView

<h6 class="h6 text-muted">Lain-lain</h6>

<table class="table table-bordered table-sm w-100 mt-2" id="tblOverhead">
    <thead class="thead-dark">
        <tr>
            <th style="width: 25%;">Berdasarkan Anggaran</th>
            <th style="width: 25%;">Telah Terpakai</th>
            <th style="width: 30%;">Keterangan</th>
            <th class="text-right" style="width: 20%;">Biaya</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="bg-light">
                <ul>
                    <li>
                        @Model.budget.ToString("n2")
                    </li>
                </ul>
            </td>
            <td class="bg-light">
                <ul>
                    <li>
                        @Model.usage.ToString("n2")
                    </li>
                </ul>
            </td>
            <td class="bg-light" style="vertical-align: middle;">
                <input type="text" class="form-control form-control-sm" value="@Model.info" />
            </td>
            <td class="bg-light" style="vertical-align: middle;">
                <input type="number" class="form-control form-control-sm text-right" min="0" value="@Model.amount" />
            </td>
        </tr>
    </tbody>
</table>