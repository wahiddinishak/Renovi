@model renovi.Models.item


<form asp-controller="" asp-action="" id="frm">
    <input type="text" asp-for="Id" id="id" class="d-none">
    <div class="form-group row">
        <label asp-for="nama" class="col-sm-2 col-form-label col-form-label-sm"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="nama" class="form-control form-control-sm">
            <span asp-validation-for="nama" class="badge badge-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="uom" class="col-sm-2 col-form-label col-form-label-sm"></label>
        <div class="col-sm-10">
            <input asp-for="uom" class="form-control form-control-sm" />
            <span asp-validation-for="uom" class="badge badge-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="harga" class="col-sm-2 col-form-label col-form-label-sm"></label>
        <div class="col-sm-10">
            <input type="number" asp-for="harga" class="form-control form-control-sm" min="0">
            <span asp-validation-for="harga" class="badge badge-danger"></span>
        </div>
    </div>
</form>